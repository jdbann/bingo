<%= @card.code %>

<%= content_tag :div, class: "grid grid-cols-3 gap-4", data: { controller: "card", "card-code": @card.code } do %>
  <% @card.card_calls.each do |call| %>
    <%= content_tag :div, class: "card__call #{"card__call--marked" if call.marked}", data: { call_id: call.call.id, marked: call.marked, target: "card.call", action: "click->card#toggleMark" } do %>
      <%= call.call.name %>
    <% end %>
  <% end %>
<% end %>
